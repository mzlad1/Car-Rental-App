<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg"
    tools:context=".mainPageOwners">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/header"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="4EVER Rent"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:text="Main Page Owners"
            android:textColor="#ab168b"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewCars"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="viewCars"
            android:background="@drawable/textbox"
            android:onClick="viewCars"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/rentedCarsOwner"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="rented Cars"
            android:background="@drawable/textbox"
            android:onClick="rentedCarsOwner"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addCarOwner"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="add Car"
            android:background="@drawable/textbox"
            android:onClick="addCarOwner"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/reportOwner"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Report"
            android:background="@drawable/textbox"
            android:onClick="reportOwner"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/userInfoOwner"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="user Info"
            android:background="@drawable/textbox"
            android:onClick="userInfoOwner"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/buttin"
            android:onClick="signout"
            android:text="signout"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
